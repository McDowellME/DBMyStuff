@model PersonalPropertyApp.Models.PolicyDetails

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Policy Details for:</h1>

<h4>"@Html.DisplayFor(model => model.Policynickname)"</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
