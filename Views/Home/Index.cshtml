@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Welcome to DB My Stuff</p>
</div>
@if (SignInManager.IsSignedIn(User))
{
    <div class="list-group">
        <a asp-controller="PolicyHolders" class="list-group-item">About The Policy Holders</a>
        <a asp-controller="PolicyDetails" class="list-group-item">About My Policy</a>
        <a asp-controller="PolicyItems" class="list-group-item">My Personal Property Items</a>
        <a asp-controller="#" class="list-group-item">Build a Claim Report</a>
        <a asp-controller="ClaimReports" class="list-group-item">Insurance Claim Reports</a>
    </div>
}
else
{
    <div class="list-group">
        <a class="list-group-item" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="list-group-item" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
}
    
