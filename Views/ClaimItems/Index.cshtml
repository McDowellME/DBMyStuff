@model IEnumerable<PersonalPropertyApp.Models.ClaimItems>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Itemname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Report.Reportid)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Claimitemid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Claimitemid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Claimitemid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
